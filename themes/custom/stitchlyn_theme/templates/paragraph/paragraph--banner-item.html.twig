<div class="hero-slide">
  {% if content.field_banner_image %}
    <img
      class="hero-img-bg"
      src="{{ file_url(content.field_banner_image['#items'].entity.uri.value) }}"
      alt="{{ content.field_banner_title['#markup']|default('Banner Image') }}"
    />
  {% endif %}

  <div class="container">
    <div class="row">
      <div class="col-lg-7">
        <div class="hero-content animate-fade-up pe-3" data-aos="fade-up">
          {% if content.field_banner_title %}
            <h1 class="hero-title">{{ content.field_banner_title }}</h1>
          {% endif %}

          {% if content.field_banner_description %}
            <p class="hero-subtitle">{{ content.field_banner_description }}</p>
          {% endif %}

          {% if content.field_cta_button %}
            <div class="d-flex flex-wrap gap-3 mb-4">
              {{ content.field_cta_button }}
            </div>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</div>