<!-- Main Content -->
<main class="admin-main">
  <div class="mb-4">
    <h1 class="display-5 fw-bold text-primary mb-3">{{ user.label }}</h1>
    <span class="badge bg-success mb-3">{{ field_status_name }}</span>
  </div>
  <div class="row g-4 mb-5">
    <div class="col-md-6 col-lg-5">
      <div class="card h-100">
        <div class="card-body">
          <h5 class="card-title mb-3">{{ usr_role }} Details</h5>
          <ul class="list-group list-group-flush">
            <li class="list-group-item"><i class="fas fa-map-marker-alt text-primary me-2"></i>
              <strong>Location:</strong> {{ field_vendor_location }}</li>
            <!-- <li class="list-group-item"><i class="fas fa-tag text-primary me-2"></i> <strong>Category:</strong>
              Textiles, Raw Materials
            </li> -->
            {% if field_phone_number %}
              <li class="list-group-item"><i class="fas fa-envelope text-primary me-2"></i> <strong>Email:</strong>{{ email }}</li>
            {% endif %}
            {% if field_phone_number %}
              <li class="list-group-item"><i class="fas fa-phone text-primary me-2"></i> <strong>Phone:</strong> {{ field_phone_number }}</li>
            {% endif %}
            <!-- 
            <li class="list-group-item"><i class="fas fa-globe text-primary me-2"></i> <strong>Website:</strong>
              <a href="#" class="text-decoration-underline">www.textilemasters.com</a>
            </li>
            <li class="list-group-item"><i class="fas fa-star text-warning me-2"></i> <strong>Rating:</strong> 4.0/5 </li>
            -->
            <li class="list-group-item"><i class="fas fa-calendar-alt text-primary me-2"></i> <strong>Member Since:</strong>
              {{ created }}
            </li>
          </ul>
        </div>
      </div>
    </div>
    <div class="col-md-6 col-lg-7">
      <div class="card h-100">
        <div class="card-body">
          <h5 class="card-title mb-3">About {{ usr_role }}</h5>
          <p>{{ field_about }}</p>
          <div class="mt-4">
            <button class="btn btn-primary me-2">Contact Vendor</button>
            <button class="btn btn-outline-primary">View Products</button>
          </div>
        </div>
      </div>
    </div>
  </div>
