{# templates/navigation/menu--backend.html.twig #}
<div class="sidebar-content">
  <nav class="sidebar-menu aesthetic-sidebar">
    <ul class="sidebar-list">
      {% for item in backend_menu %}
        {% set has_children = item.children is defined and item.children|length > 0 %}

        <li class="sidebar-group {{ has_children ? 'has-submenu' }}">
          {% if has_children %}
            <a href="#" class="sidebar-link sidebar-parent d-flex justify-content-between align-items-center" data-toggle="sidebar-dropdown" tabindex="0">
              <span><i class="fas fa-list me-2"></i>{{ item.title }}</span>
              <i class="fas fa-chevron-right sidebar-arrow"></i>
            </a>
            <ul class="sidebar-sublist" style="display: none;">
              {% for child in item.children %}
                <li>
                  <a href="{{ child.url }}" class="sidebar-link">
                    <i class="fas fa-table-list me-2"></i>{{ child.title }}
                  </a>
                </li>
              {% endfor %}
            </ul>
          {% else %}
            <a href="{{ item.url }}" class="sidebar-link d-flex align-items-center">
              <i class="fas fa-list me-2"></i>{{ item.title }}
            </a>
          {% endif %}
        </li>
      {% endfor %}
    </ul>
  </nav>
</div>
